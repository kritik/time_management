alert("updated");
<% if @todo.errors.any? %>
  <% @todo.errors.full_messages.each do |msg| %>
    create("themeroller",  {
        title: 'You have an error',
        text: "<%= msg %>"
    },{custom:true});
  <% end %>
<% else %>
    create("sticky",  {
        title: 'updated',
        text: "<%= @notice %>"
    });
    $("#todo_edit_<%= @todo.id %>").replaceWith("<%=escape_javascript(render :partial => "todo", :object => @todo) %>");
    <%#*$("#todo_edit_<%= @todo.id %>").fadeOut(1000);%>
    $("#todo_<%= @todo.id %>").fadeIn(1000);
<% end %>
